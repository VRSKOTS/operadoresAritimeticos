#include <stdio.h>

int main() {
    int quantidade = 50; // Quantidade de números pares a serem somados
    int soma = 0; // Variável para armazenar a soma

    printf("Soma dos 50 primeiros números pares:\n");

    for (int i = 1; quantidade > 0; i++) {
        if (i % 2 == 0) {
            soma += i; // Adiciona o número par à soma
            quantidade--; // Decrementa a quantidade restante
        }
    }

    printf("A soma dos 50 primeiros números pares é: %d\n", soma);

    return 0;
}
