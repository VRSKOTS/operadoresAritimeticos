#include <stdio.h>

int main() {
    float altura;

    float alturaMinima = 1.8;

    printf("Digite a altura (em metros): ");
    scanf("%f", &altura);

    if (altura > alturaMinima) {
        printf("A pessoa é mais alta que 1.8 metros.\n");
    } else {
        printf("A pessoa não é mais alta que 1.8 metros.\n");
    }

    return 0;
}
